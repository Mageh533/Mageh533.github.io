---
import Layout from '../layouts/Layout.astro';
import SideBar from '../components/SideBar.astro';
import Card from '../components/Card.astro';
---

<Layout title="Gianfranco's Portfolio">
	<main>
		<SideBar />
		<div>
			<h1>Gianfranco Cicciomessere</h1>
			<h2>I am a Software Engineer</h2>
		</div>
	</main>
</Layout>

<style>
	main {
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
		display: flex;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: left;
		margin-bottom: 1em;
	}
	h2 {
		font-size: 2rem;
		font-weight: 400;
		text-align: left;
	}
</style>
